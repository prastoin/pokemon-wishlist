---
import type { EditionLiteral, ParsedPokemonCardCollection } from "../type";
import Card from "./Card.astro";

export interface Props {
  edition: EditionLiteral;
  cardCollection: ParsedPokemonCardCollection;
}

const { cardCollection, edition } = Astro.props;
---

<section
  class="flex-column center md:mt-3 md:mr-9 w-100 print:break-inside-avoid"
>
  <h3
    class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 print:text-black print:absolute"
  >
    <a href={`/${edition}`}>
      {edition}
    </a>
  </h3>
  <hr
    class="bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 print:hidden"
  />
  <ul class="grid grid-cols-2 md:grid-cols-4 print:grid-cols-4">
    {cardCollection.map((card) => <Card cardInformation={card} />)}
  </ul>
</section>
